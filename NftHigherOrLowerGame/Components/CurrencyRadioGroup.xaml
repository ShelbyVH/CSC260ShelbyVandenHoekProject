<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="NftHigherOrLowerGame.Components.CurrencyRadioGroup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout
        HorizontalOptions="Center"
        MinimumWidthRequest="200"
        RadioButtonGroup.GroupName="Currency"
        Spacing="10"
        VerticalOptions="Center">
        <Picker
            x:Name="CurrPicker"
            Title="Currency:"
            SelectedIndexChanged="CurrPicker_SelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>US Dollars</x:String>
                    <x:String>Ethereum</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </StackLayout>
</ContentView>
