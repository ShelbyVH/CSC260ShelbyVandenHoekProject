<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NftHigherOrLowerGame.Components.NFTImage"
             x:Name="this">
    <VerticalStackLayout>
        <Frame 
            x:Name="ImageFrame"
            Opacity="0"
            CornerRadius="30"
            IsClippedToBounds="True"
            Padding="0">
            <Image 
                x:Name="Image"
                HeightRequest="200"
                HorizontalOptions="Center"
            />
        </Frame>
        <Label 
            x:Name="NameLabel"
            Text="Doodles #500"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="PriceLabel"
            Text="$ 500"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentView>
